# bindsym XF86PowerOff mode "Power Management"; workspace $options; exec feh --no-startup-id --no-fehbg --bg-fill $HOME/images/power_management.png
bindsym $mod+Shift+e mode "Power Management"; workspace $options; exec feh --no-startup-id --no-fehbg --bg-fill $HOME/.config/i3/power_management.png

mode "Power Management" {
  # Power
  bindsym p exec --no-startup-id "$HOME/.config/i3/i3exit.sh poweroff", mode "default"
  bindsym r exec --no-startup-id "$HOME/.config/i3/i3exit.sh reboot", mode "default"
  bindsym s exec --no-startup-id "$HOME/.config/i3/i3exit.sh suspend", mode "default", workspace back_and_forth, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym l exec --no-startup-id "$HOME/.config/i3/i3exit.sh lock", mode "default", workspace back_and_forth, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym e exec --no-startup-id "$HOME/.config/i3/i3exit.sh logoff", mode "default", workspace back_and_forth, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*

  # Windows
  bindsym a [class=".*"] kill, mode "default", workspace $ws1, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym 1 [workspace=$ws1] kill, mode "default", workspace $ws1, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym 2 [workspace=$ws2] kill, mode "default", workspace $ws2, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym 3 [workspace=$ws3] kill, mode "default", workspace $ws3, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym 4 [workspace=$ws4] kill, mode "default", workspace $ws4, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym 5 [workspace=$ws5] kill, mode "default", workspace $ws5, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym 6 [workspace=$ws6] kill, mode "default", workspace $ws6, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym 7 [workspace=$ws7] kill, mode "default", workspace $ws7, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym 8 [workspace=$ws8] kill, mode "default", workspace $ws8, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym 9 [workspace=$ws9] kill, mode "default", workspace $ws9, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym 10 [workspace=$ws10] kill, mode "default", workspace $ws10, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym x [workspace=$rambox] kill, mode "default", workspace $rambox, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym t [workspace=$music] kill, mode "default", workspace $music, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym m [workspace=$steam] kill, mode "default", workspace $steam, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym d [workspace=$services] kill, mode "default", workspace $services, exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*

  # If you don't randomize your background image, just use $HOME/.fehbg to 
  # use your last wallpaper image
  bindsym Return mode "default"; workspace back_and_forth; exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym Escape mode "default"; workspace back_and_forth; exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym q mode "default"; workspace back_and_forth; exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
  bindsym XF86PowerOff mode "default"; workspace back_and_forth; exec feh --no-startup-id --bg-fill --randomize $HOME/.wallpapers/*
}

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 2 px or 2 ppt
        bindsym j resize grow height 2 px or 2 ppt
        bindsym k resize shrink height 2 px or 2 ppt
        bindsym l resize grow width 2 px or 2 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 2 px or 2 ppt
        bindsym Down resize grow height 2 px or 2 ppt
        bindsym Up resize shrink height 2 px or 2 ppt
        bindsym Right resize grow width 2 px or 2 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

