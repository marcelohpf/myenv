# window management
bindsym $mod+d mode "Display Management"; workspace $options; exec --no-startup-id feh --no-fehbg --bg-fill "$HOME/.config/i3/window_management.png"

mode "Display Management" {
  bindsym a exec "xrandr --auto"
  bindsym d exec "xrandr --output eDP1 --off"

  bindsym m exec "xrandr --output DP1 --auto --same-as eDP1"
  bindsym l exec "xrandr --output DP1 --auto --output eDP1 --left-of DP1"
  bindsym h exec "xrandr --output DP1 --auto --output eDP1 --right-of DP1"
  bindsym j exec "xrandr --output DP1 --auto --output eDP1 --above DP1"
  bindsym k exec "xrandr --output DP1 --auto --output eDP1 --below DP1"
  bindsym o exec "xrandr --output DP1 --off"

  bindsym Shift+m exec "xrandr --output DP1 --auto --same-as eDP1"
  bindsym Shift+l exec "xrandr --output HDMI1 --auto --output eDP1 --left-of HDMI1"
  bindsym Shift+h exec "xrandr --output HDMI1 --auto --output eDP1 --right-of HDMI1"
  bindsym Shift+j exec "xrandr --output HDMI1 --auto --output eDP1 --above HDMI1"
  bindsym Shift+k exec "xrandr --output HDMI1 --auto --output eDP1 --below HDMI1"
  bindsym Shift+o exec "xrandr --output HDMI1 --off"


  bindsym r workspace back_and_forth; mode "default"; exec feh --bg-fill --randomize $HOME/.wallpapers/*; restart

  bindsym Escape mode "default"; workspace back_and_forth; exec --no-startup-id feh --bg-fill --randomize $HOME/.wallpapers/*
  bindsym q mode "default"; workspace back_and_forth; exec --no-startup-id feh --bg-fill --randomize $HOME/.wallpapers/*
  bindsym $mod+d mode "default"; workspace back_and_forth; exec --no-startup-id feh --bg-fill --randomize $HOME/.wallpapers/*
}


